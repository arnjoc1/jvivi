{% extends "viviUserBundle::layout.html.twig" %}
{% block title %}{{ parent()}} | Register {% endblock %}
{% block stylesheets %}
<link id="bootstrap-style" href="{{ asset('admin/css/bootstrap.min.css')}}" rel="stylesheet">
   {{ parent()}}
{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    	<h3 class="text-primary" style="text-align:center;" > Créer un compte</h3>
        <hr />	 
	    {% if error is defined %}
		 <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
         
        {% endif %}
	   
    
    
    <form  class="form-signin" action="{{ path("fos_user_registration_register") }}" method="post" class="{{ 'fos_user_registration_register'}}">
      {% if (form_errors(form.email) or form_errors(form.username) or form_errors(form.plainPassword.first)) %}
         <div class="alert alert-danger">
	       {{ form_errors(form.email) }} 
	       {{ form_errors(form.plainPassword.first) }} 
	       {{ form_errors(form.username) }} 
	     </div>
      {% endif %}
      <div class="form-group">
        <label for="email">{{ 'form.email'|trans }}</label>
        <input type="email" class="form-control" id="email" name="fos_user_registration_form[email]" value="" required="required" />
      </div>
      <div class="form-group">
        <label for="username">{{ 'form.username'|trans }}</label>
        <input type="text" class="form-control" id="username" name="fos_user_registration_form[username]" value="" required="required" pattern=".{2,}"/>
      </div>
      <div class="form-group">
        <label for="password">{{ 'form.password'|trans }}</label>
         <input type="password" class="form-control" id="password" name="fos_user_registration_form[plainPassword][first]" required="required" />
      </div>
      <div class="form-group">
        <label for="password">{{ 'form.password_confirmation'|trans }}</label>
        <input type="password" class="form-control" id="password" name="fos_user_registration_form[plainPassword][second]" required="required" />
      </div>
      
      {{ form_row(form._token) }}
      <div> <br /></div>
      <input type="submit" class="btn btn-success btn-sm" value="{{ 'registration.submit'|trans }}" />
      <div> <br /></div>
      <label>Déjà inscrit ! <a href="{{ path("fos_user_security_login") }}">Connecte toi</a></label>
      </form>

   


{% endblock fos_user_content %}

