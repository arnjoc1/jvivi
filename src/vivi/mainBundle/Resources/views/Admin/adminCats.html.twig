{% extends "::admin.html.twig" %}

{% block title %}{{ parent()}} | Category {% endblock %}
{% block stylesheets %}
   {{ parent()}}
   <link id="bootstrap-style" href="{{ asset('admin/admin/metro/css/bootstrap.min.css')}}" rel="stylesheet">
   <link id="bootstrap-style" href="{{ asset('admin/admin/metro/css/bootstrap-responsive.min.css')}}" rel="stylesheet">
   <link id="bootstrap-style" href="{{ asset('admin/admin/metro/css/style.css')}}" rel="stylesheet">
   <link id="bootstrap-style" href="{{ asset('admin/admin/metro/css/style-responsive.css')}}" rel="stylesheet">
{% endblock %}


{% block body %}
     <div class="row">
        <div class="col-lg-12">
           <h1 class="page-header"> Categories</h1>
           <ol class="breadcrumb">
              <li>
                 <i class="fa fa-dashboard"></i>  <a href="{{ path('vivimain_admin') }}">Admin</a>
              </li>
              <li class="active">
                 <i class="fa fa-bar-chart-o"></i> Categories
              </li>
				</ol>
        </div>
     </div>
     <div class="row">
        <div class="col-lg-6">
          <div class="panel panel-default">
			  <div class="panel-heading">
             <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Category</h3>
           </div>
          <div class="panel-body">
				<div class="row">
					<di class="col-sm-9">
						{% for flash_message in app.session.flashBag.get('info') %}
                <div class="flash-notice">
                   {{ flash_message|raw }}
                </div>
                 {% endfor %}
					</di><di class="col-sm-3"><a href="{{path('vivimain_admin_addCat')}}" class="btn btn-default btn-sm">Add category</a></div><br></di>
				<div class="table-responsive">
						<table class="table table-bordered table-hover table-striped">
							 <thead>
								  <tr>
										<th> name</th>
										<th> Action</th>
								  </tr>
							 </thead>
							 <tbody>
								{% for cat in cats %}
								  <tr>
										<td><span class="btn cursor"> {{ cat.name|capitalize }} </span></td>
										<td
											<span class="pull-center"><a href="{{ path('vivimain_admin_cat_edit', {'id':cat.id})}}" class="btn btn-default btn-sm">  <i class="fa fa-fw fa-edit"></i></a> <a href="{{ path('vivimain_admin_cat_delete', {'id':cat.id})}}" class="btn btn-sm btn-default"> <i class="fa fa-fw fa-trash"></i></a></span>
										</td>
								  </tr>
								{% endfor %}
							 </tbody>
						</table>
				  </span>
          </div>
			
			 </div>
        </div>
        </div>
        
       <!--	fin col-lg-6 -->
		 
		  <div class="col-lg-6" style="display: {{ showDiv }};">
          <div class="panel panel-default">
			  <div class="panel-heading">
             <h3 class="panel-title"><i class="fa fa-edit fa-fw"></i> Add category</h3>
           </div>
          <div class="panel-body">
				{% if form is defined %}
				{{ form_start(form,{'attr':{ 'role':'form' }}) }}
    
				{{ form_row(form.name,{'attr':{ 'class':'form-control' }}) }}
				
				<br>
				{{ form_row(form.Save,{'attr':{ 'class':'btn btn-primary' }}) }}
				
				{{ form_end(form) }}
				{% endif %}
          </div>
     </div>
			<div>
			 {% for flash_message in app.session.flashBag.get('info') %}
                <div class="flash-notice">
                   {{ flash_message|raw }}
                </div>
          {% endfor %}
		 </div>
     </div>
     </div>
{% endblock %}
