{{ form_start(form, { method: 'POST', action: path('vivimain_add_com', { 'Slug': art.slug }) }) }}
    <fieldset>

        {{ form_errors(form) }}

        <div class="form-group {% if not form.content.vars.valid %}has-error{% endif %}">
            {{ form_row(form.author, {attr:{ class:'form-control' }}) }}
          
            {{ form_label(form.content, 'label.content', { label_attr: { class: 'hidden' }}) }}

            {{ form_errors(form.content) }}
           <br>
            {{ form_widget(form.content, { attr: { rows: 4, class:'form-control' } }) }}
          
        </div>

        <div class="form-group">
            <button class="btn btn-success" type="submit"> add comment</button>
        </div>
    </fieldset>
{{ form_end(form) }}

